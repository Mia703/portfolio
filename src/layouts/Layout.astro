import "../global.css";

const pageInformation = {
	title: "Amya Moore",
	description: "Amya's Personal Portfolio",
	favicon: "",
};
---

<!doctype html>
<html lang="en">
	<head>
		<!-- Google tag (gtag.js) -->
		<script async src="https://www.googletagmanager.com/gtag/js?id=G-FV6JR9MP03"
		></script>
		<script>
			window.dataLayer = window.dataLayer || [];
			function gtag() {
				dataLayer.push(arguments);
			}
			gtag("js", new Date());

			gtag("config", "G-FV6JR9MP03");
		</script>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={pageInformation.description} />
		<link
			rel="shortcut icon"
			href={pageInformation.favicon}
			type="image/x-icon"
		/>
		<title>{pageInformation.title}</title>
	</head>
	<body class="bg-primaryBlack text-primaryWhite">
		<div
			id="main-grid"
			class="grid grid-cols-4 gap-4 p-4 md:grid-cols-6 lg:grid-cols-12"
		>
			<slot />
		</div>
	</body>
