---
const { position, company, location, date, description } = Astro.props;
---

<div class="position-wrapper group my-8">
	<div class="grid grid-cols-2 md:gap-4">
		<div class="col-span-2 md:col-span-1">
			<p
				class="font-semibold text-primaryWhite transition-all ease-in-out group-hover:text-primaryWhite md:text-primaryDarkGrey"
			>
				{position}
			</p>
			<p
				class="mr-4 font-semibold italic text-primaryWhite transition-all ease-in-out group-hover:text-primaryWhite md:text-primaryDarkGrey"
			>
				{company}
			</p>
		</div>
		<div class="col-span-2 md:col-span-1 md:text-right">
			<p
				class="transition-all ease-in-out group-hover:text-primaryWhite sm:text-primaryWhite md:text-primaryDarkGrey"
			>
				{location}
			</p>
			<p
				class="transition-all ease-in-out group-hover:text-primaryWhite text-primaryWhite md:text-primaryDarkGrey"
			>
				{date}
			</p>
		</div>
	</div>
	<p
		class="my-2 text-primaryLightGrey transition-all ease-in-out group-hover:text-primaryLightGrey md:text-primaryDarkGrey"
	>
		{description}
	</p>
</div>
