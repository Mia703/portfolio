---
const { degree, major, minor, institution, date, coursework } = Astro.props;
---

<div class="education-wrapper group my-8">
	<div class="grid grid-cols-[1fr_max-content] md:gap-4">
		<div class="degree-wrapper col-span-2 md:col-span-1">
			<p
				class="text-sm font-medium text-primaryWhite transition-all ease-in-out group-hover:text-primaryWhite lg:text-primaryDarkGrey"
			>
				{degree} in
			</p>
			<p
				class="font-bold text-primaryWhite transition-all ease-in-out group-hover:text-primaryWhite lg:text-primaryDarkGrey"
			>
				{major}
			</p>
			{
				minor != "" ? (
					<p class="font-semibold italic text-primaryWhite transition-all ease-in-out group-hover:text-primaryWhite lg:text-primaryDarkGrey">
						{minor}
					</p>
				) : (
					<p />
				)
			}
		</div>
		<div class="institution-wrapper col-span-2 md:col-span-1 md:text-right">
			<p
				class="text-primaryWhite transition-all ease-in-out group-hover:text-primaryWhite lg:text-primaryDarkGrey"
			>
				{institution}
			</p>
			<p
				class="text-primaryWhite transition-all ease-in-out group-hover:text-primaryWhite lg:text-primaryDarkGrey"
			>
				{date}
			</p>
		</div>
	</div>
	<p
		class="my-2 capitalize text-primaryLightGrey transition-all ease-in-out group-hover:text-primaryLightGrey lg:text-primaryDarkGrey"
	>
		<span class="font-semibold">Coursework:</span>
		{coursework}.
	</p>
</div>
