---
import type { MarkdownLayoutProps } from "astro";
import Navigation from "../components/Navigation.astro";
import "../global.css";

type Props = MarkdownLayoutProps<{
	tab_title: string;
	description: string;
	pubDate: string;
	author: string;
	image: {
		url: string;
		alt: string;
	};
}>;

const { frontmatter, url } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={frontmatter.description} />
		<title>{frontmatter.tab_title}</title>
	</head>
	<body class="bg-primaryBlack text-primaryWhite">
		<div
			id="main-grid"
			class="grid grid-cols-4 gap-4 p-4 md:grid-cols-6 lg:grid-cols-12"
		>
			<Navigation current="projects" />
			<div class="post-wrapper col-span-4 md:col-span-6 lg:col-span-12">
				<img src={frontmatter.image.url} alt={frontmatter.image.alt} />
				<slot />
			</div>
		</div>
	</body>
</html>

<style>
	html {
		scroll-behavior: smooth;
	}
</style>
